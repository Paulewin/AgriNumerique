	number = {2},
	urldate = {2026-02-01},
	journal = {Journal of Agriculture and Rural Development in the Tropics and Subtropics (JARTS)},
	author = {Ntukamazina, Nepomuscene and Onwonga, Richard N. and Sommer, Rolf and Rubyogo, Jean-Claude and Mukankusi, Clare M. and Mburu, John and Kariuki, Rahab},
	month = jul,
	year = {2017},
	keywords = {adoption driving factor, crop and livestock insurance, developing countries, weather risk management},
	pages = {171--185},
	file = {Full Text PDF:files/56/Ntukamazina et al. - 2017 - Index-based agricultural insurance products challenges, opportunities and prospects for uptake in s.pdf:application/pdf},
}

